@{
    var testimonyBackgroundImage = Model.Value<IPublishedContent>("testimonyBackgroundImage");
}
@if (testimonyBackgroundImage != null)
{
        <section class="ftco-section testimony-section" style="background-image: url(@testimonyBackgroundImage.Url());" data-stellar-background-ratio="0.5">
            <div class="container">
                <div class="row justify-content-center mb-5 pb-2">
                    <div class="col-md-7 text-center heading-section heading-section-white ftco-animate">
                        <span class="subheading">Testimony</span>
                        <h2 class="mb-4">Happy Customer</h2>
                    </div>
                </div>

                <div class="row ftco-animate justify-content-center">
                    <div class="col-md-7">
                        <div class="carousel-testimony owl-carousel ftco-owl">
                            @{
                                var testiomony = Model.Value<IEnumerable<IPublishedElement>>("testimonyNestedContent");
                                foreach (var item in testiomony)
                                {
                                    var image = item.Value<IPublishedContent>("testimonyImage");
                                    <div class="item">
                                        <div class="testimony-wrap text-center py-4 pb-5">
                                            @if (image != null)
                                            {
                                                <div class="user-img mb-4" style="background-image: url(@image.Url())">
                                                    <span class="quote d-flex align-items-center justify-content-center">
                                                        <i class="icon-quote-left"></i>
                                                    </span>
                                                </div>
                                            }
                                            <div class="text p-3">
                                                <p class="mb-4">@item.Value("testimonyDetail")</p>
                                                <p class="name">@item.Value("testimonyName")</p>
                                                <span class="position">Customer</span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
       }

        <section class="ftco-section">
            <div class="container">
                <div class="row justify-content-center mb-5 pb-2">
                    <div class="col-md-7 text-center heading-section ftco-animate">
                        <span class="subheading">Chef</span>
                        <h2 class="mb-4">Our Mater Chef</h2>
                    </div>
                </div>


                <div class="row">
                    @{

                        var items = Model.Value<IEnumerable<IPublishedElement>>("ChefList");

                        foreach (var item in items)
                        {
                            var image = item.Value<IPublishedContent>("chefImage");
                            var cheftwitter = item.Value<Link>("chefTwitterLink");
                            var cheffacebook = item.Value<Link>("chefFacebookLink");
                            var chefinstagram = item.Value<Link>("chefInstagramLink");
                            var chefprofile = item.Value<Link>("chefProfileLink");

                            <div class="col-md-6 col-lg-3 ftco-animate">
                                <div class="staff">
                                    @if (image != null)
                                    {
                                        <div class="img" style="background-image: url(@image.Url())"></div>
                                    }

                                    <div class="text px-4 pt-4">
                                        <h3>@item.Value("chefName")</h3>
                                        <span class="position mb-2">@item.Value("chefDesignation")</span>
                                        <div class="faded">

                                            <!-- <p>I am an ambitious workaholic, but apart from that, pretty simple person.</p> -->
                                            <ul class="ftco-social d-flex">
                                                <li class="ftco-animate"><a href="@cheftwitter.Url"><span class="icon-twitter"></span></a></li>
                                                <li class="ftco-animate"><a href="@cheffacebook.Url"><span class="icon-facebook"></span></a></li>
                                                <li class="ftco-animate"><a href="@chefprofile.Url"><span class="icon-google-plus"></span></a></li>
                                                <li class="ftco-animate"><a href="@chefinstagram.Url"><span class="icon-instagram"></span></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>
        </section>

